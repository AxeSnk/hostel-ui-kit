include ../button/button
include ../field/field

mixin login({ title })
  form.login
    h1.login__header= title
    +field({placeholder: 'Email', type: 'email'})
    +field({placeholder: 'Пароль', type: 'password'})
    +button({title: 'Войти', long: true})
    .login__foot
      .login__note Нет аккаунта на Toxin?
      +button({title: 'Создать', border: true})


