include ../button/button
include ../field/field

mixin login({ title })
  form.login
    h1.login__header= title
    +field({placeholder: 'Email', type: 'email'})
    +field({placeholder: 'Пароль', type: 'password'})
    +button({title: 'Войти', arrow: true}).button_size_long
    .login__foot
      .login__note Нет аккаунта на Toxin?
      +button({title: 'Создать'}).button_theme_border
