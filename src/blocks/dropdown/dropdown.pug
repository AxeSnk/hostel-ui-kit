mixin dropdown({ category='', list=[] })
  form(class= `js-dropdown__${category}`).iqdropdown
    p.iqdropdown-selection Сколько гостей
    i.material-icons.expand-more__icon expand_more
    .iqdropdown-menu
      each item in list
        .iqdropdown-menu-option(data-id= `${item.title}` data-defaultcount=`${item.count}`)
          div
            p.iqdropdown-item= item.title
      .buttons-dropdown__wrapper
        button.button__dropdown.button__dropdown--clear.js-button__dropdown--clear Очистить
        button.button__dropdown.button__dropdown--apply Применить
