mixin dropdown
  .js-dropdown__guest.iqdropdown
    p.iqdropdown-selection Сколько гостей
    i.material-icons.expand-more__icon expand_more
    .iqdropdown-menu
      .iqdropdown-menu-option(data-id="item1")
        div
          p.iqdropdown-item Взрослые
      .iqdropdown-menu-option(data-id="item2")
        div
          p.iqdropdown-item Дети
      .iqdropdown-menu-option(data-id="item3")
        div
          p.iqdropdown-item Младенцы
      .buttons-dropdown__wrapper
        button.button__dropdown.button__clear Очистить
        button.button__dropdown.button__apply Применить
