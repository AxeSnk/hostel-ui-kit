mixin dropdown({ category='', list=[] })
  div.iqdropdown(class=`js-dropdown__${category}`)
    p.iqdropdown-selection.js-iqdropdown-selection Сколько гостей
    i.material-icons.expand-more__icon.js-iqdropdown-icon expand_more
    .iqdropdown-menu.js-iqdropdown-menu
      each item in list
        .iqdropdown-menu-option.js-iqdropdown-menu-option(
          data-id=`${item.title}`,
          data-defaultcount=`${item.count}`
        )
          p.iqdropdown-item= item.title
          .iqdropdown-controls.js-iqdropdown-controls
            .iqdropdown-controls__increment.controls__button.js-minus -
            input.iqdropdown-controls__count.js-controls__count(readonly="readonly" type="text" value="0") 
            .iqdropdown-controls__decrement.controls__button.js-plus +
      .buttons-dropdown__wrapper
        button.button__dropdown.button__dropdown--clear.js-button__dropdown--clear(type='button') Очистить
        button.button__dropdown.button__dropdown--apply.js-button__dropdown--apply(type='button') Применить
