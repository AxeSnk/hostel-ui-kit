mixin field({ title='', note='', placeholder='', value='', name ='', masked=false, calendar={on, input}, type='text', button={send:false,dropdown:false} }={})
  - let classes = [];
  if masked
    - classes.push('js-masked');
  if calendar.on
    - classes.push(`js-calendar-${calendar.input}`);

  .field
    .filed__header
      h3.field__title= title
      .field__note= note
    input.field__input(class=classes, placeholder=placeholder, value=value, type=type, name=name)
    if button.send
      i.material-icons.arrow-icon arrow_forward
    if button.dropdown
      i.material-icons.expand-more-icon expand_more
