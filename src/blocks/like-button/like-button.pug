mixin like-button({ items=[] }={})
  each item in items
    if item.liked
      form.like-button--liked.like-button
        i.like-button__icon.material-icons favorite
        .like-button__counter= item.counter
    else
      form.like-button
        i.like-button__icon.material-icons favorite_border
        .like-button__counter= item.counter
