.booking

    //booking-header

    .booking-header
        p(class='booking-number') <small>№</small> 888
        p(class='booking-luxury') люкс
        p(class='booking-cost') <strong>9990Р</strong><small> в сутки</small>


    //fiel-date

    .date-container
        .date-container-items
            form(class='field-masked__form-date') прибытие
                input(class='field-masked__form-date-input' type='date')
        .date-container-items
            form(class='field-masked__form-date') выезд
                input(class='field-masked__form-date-input' type='date')


    //field-masked

    .guests гости
        .field-guests Сколько гостей
            i(class='material-icons') expand_more
    //dropdown
    .dropdown-guests
        .dropdown-container
            .dropdown-container-text взрослые
            .quantity
                input(type='number' id="adults" min="0" max="9" step="1" value="0")

        .dropdown-container
            .dropdown-container-text дети
            .quantity
                input(type='number' id="childs" min="0" max="9" step="1" value="0")

        .dropdown-container
            .dropdown-container-text младенцы
            .quantity
                input(type='number' id="babies" min="0" max="9" step="1" value="0")


        //clear-apply
        .dropdown-container.container__clear-apply
            .clear-quantity-invisible очистить
            .apply-quantity применить


    //check-list

    .check-list
        .check-list--item
            p 9990Р х 4суток
            p 39960Р
        .check-list--item
            p Сбор за услуги: скидка 2179Р
            p(class='info-icon')
            p 0Р
        .check-list--item
            p Сбор за дополнительные услуги
            p(class='info-icon')
            p 300Р
    
    .check-list--total
        p Итого
        .check-list--total-item
        p 38081 Р


    //button__default-long

    button(class='button__defult button__default-long') забронировать
        .button__default-long--icon


