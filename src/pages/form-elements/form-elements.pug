extends ../../blocks/layout/layout

include ../../blocks/bullet/bullet
include ../../blocks/button/button
include ../../blocks/checkbox-buttons/checkbox-buttons
include ../../blocks/checkbox-list/checkbox-list
include ../../blocks/comment/comment
include ../../blocks/dropdown/dropdown
include ../../blocks/feature/feature
include ../../blocks/field/field
include ../../blocks/like-button/like-button
include ../../blocks/logo/logo
include ../../blocks/pagination/pagination
include ../../blocks/radio-buttons/radio-buttons
include ../../blocks/range-date/range-date
include ../../blocks/rate-button/rate-button
include ../../blocks/rich-checkbox/rich-checkbox
include ../../blocks/slider/slider
include ../../blocks/toggle/toggle

block title
  title form-elements

block header
block content
  .form-elements
    .form-elements__logo
      +logo({ui: true})
    .form-elements__wrapper
      .form-elements__left-column
        .form-elements__item
          +field({title: 'text-field', note: 'default', placeholder: 'Email'})
        .form-elements__item
          +field({title: 'text-field', note: 'hover/focus', value: 'This is pretty awesome'})
        .form-elements__item.js-dropdown
          .dropdown-header
            h3.dropdown-header__title Dropdown
            .dropdown-header__note Default
          +dropdown({category: 'guests', list:[{title: 'Взрослые', count: 0}, {title: 'Дети', count: 0}, {title: 'Младенцы', count: 0}]})
        .form-elements__item
          +field({title: 'masked text field', note: 'default', placeholder: 'ДД.ММ.ГГГГ', masked: true})
        .form-elements__item
          +range-date
        .form-elements__item.form-elements__item_size_small.js-calendar
          +field({title: 'filter date dropdown', name: 'calendar-range', placeholder: 'ДД.ММ.ГГГГ', calendar: {on: true, input: 'range'}, button: {dropdown: true}})
        .form-elements__item.form-elements__item_size_small
          +field({title: 'subscription text field', name: 'email', type: 'email', placeholder: 'Email', button:{send:true}})
        .form-elements__item.form-elements__item_size_small.form-elements__item-drpodown.js-dropdown
          .dropdown-header
            h3.dropdown-header__title Dropdown
            .dropdown-header__note Default
          +dropdown({category: 'rooms', list:[{title: 'спальни', count: 2}, {title: 'кровати', count: 2}, {title: 'ванные комнаты', count: 0}]})
        .form-elements__item.form-elements__item_size_small.js-dropdown
          .dropdown-header
            h3.dropdown-header__title Dropdown
            .dropdown-header__note Default
          +dropdown({category: 'rooms', list:[{title: 'спальни', count: 2}, {title: 'кровати', count: 2}, {title: 'ванные комнаты', count: 0}]})
        .form-elements__item.form-elements__checkbox
          +checkbox-list({ title: 'Expandable checkbox list', list: [ { label: 'Завтрак', checked: false } ] })
        .form-elements__item
          +checkbox-list({ title: 'Expandable checkbox list', list: [ { label: 'Завтрак', checked: false }, { label: 'Письменный стол', checked: true }, { label: 'Стул для кормления', checked: true }, { label: 'Кроватка', checked: true }, { label: 'Телевизор', checked: false }, { label: 'Шампунь', checked: false }, { label: 'Телевизор', checked: false }, { label: 'Шампунь', checked: false }, ] })

      .form-elements__midl-column
        .form-elements__item.form-elements__item_size_short
          +checkbox-buttons({ title: 'Checkbox buttons', list: [ { label: 'Можно курить', checked: false }, { label: 'Можно с питомцами', checked: true }, { label: 'Можно пригласить гостей (до 10 человек)', checked: true } ] })
        .form-elements__item
          h3.radio-buttons-header Radio buttons
          +radio-buttons({ items: [ {label: 'Мужчина', name: 'sex', checked: true}, {label: 'Женщина', name: 'sex', checked: false} ] })
        .form-elements__item
          h3.toggle-header Toggle
          +toggle({ items: [ {label: 'Получать спецпредложения', checked: true}, {label: 'Получать спецпредложения', checked: false}, ] })
        .form-elements__item
          h3.like-button-header Like button
          .like-button-wrapper
            +like-button({ items: [ {liked: false, counter: '2'}, {liked: true, counter: '12'} ] })
        .form-elements__item
          h3.rate-button-header Rate button
          .rate-button-wrapper
            +rate-button({rate: 4})
            +rate-button({rate: 5})
        .form-elements__item.js-dropdown
          .dropdown-header
            h3.dropdown-header__title Dropdown
          +dropdown({category: 'guests', list:[{title: 'Взрослые', count: 0}, {title: 'Дети', count: 0}, {title: 'Младенцы', count: 0}]})
        .form-elements__item.form-elements__item_size_small
          h3.rich-checkbox-header Rich checkbox buttons
          +rich-checkbox({label: 'Широкий коридор', details: 'Ширина коридоров в номере не менее 91 см.', checked: false})
          +rich-checkbox({label: 'Помощник для инвалидов', details: 'На 1 этаже вас встретит специалист и проводит до номера.', checked: false})

      .form-elements__right-column
        .form-elements__item.form-elements__item_size_small
          +slider({title: 'Range slider'})
        .form-elements__item
          h3.buttons-header Buttons
          .buttons-default
            +button({title: 'Click me', link: true})
            +button({title: 'Click me', link: true}).button_disabled
          .buttons-border
            +button({title: 'Click me', link: true}).button_theme_border
            +button({title: 'Click me', link: true}).button_disabled.button_theme_border
          .buttons-link
            +button({title: 'Click me', link: true}).button_size_small
            +button({title: 'Click me', link: true}).button_size_small.button_disabled
          .buttons-long
            +button({title: 'Перейти к оплате', link: true, arrow: true}).button_size_long
        .form-elements__item
          h3.pagination-header Pagination
          +pagination({footnote: '1 – 12 из 100+ вариантов аренды'})
        .form-elements__item.js-dropdown
          .dropdown-header
            h3.dropdown-title Dropdown
          +dropdown({category: 'guests', list:[{title: 'Взрослые', count: 2}, {title: 'Дети', count: 1}, {title: 'Младенцы', count: 0}]})
        .form-elements__item
          h3.bullet-list-header Bullet list
          .bullet-list
            +bullet({text: 'Нельзя с питомцами'})
            +bullet({text: 'Без вечеринок и мероприятий'})
            +bullet({text: 'Время прибытия — после 13:00, а выезд до 12:00'})

    .form-elements__footer
      .form-elements__item.form-elements__features
        +feature({icon: 'insert_emoticon', title: 'Комфорт', text: 'Шумопоглощающие стены'})
        +feature({icon: 'location_city', title: 'Удобство', text: 'Окно в каждой из спален'})
      .form-elements__item_size_long
        +comment({img:'ava', name: 'Мурад Сарафанов', date: '5 дней назад', liked: true, counter: '12', text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'})

block footer
